@{
    Layout = "_Layout";
    ViewData["Title"] = "變更密碼";
    var isForced = User.HasClaim("mustChange", "1");
}
<h3>變更密碼</h3>

@if (isForced)
{
    <div class="alert alert-warning">
        系統偵測到此帳號需要更新密碼，請先完成變更。
    </div>
}
else
{
    <div class="alert alert-info">
        建議定期更新密碼以提升帳戶安全。
    </div>
}

<p class="text-muted">帳號：@ViewBag.Email</p>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}
@if (TempData["err"] != null)
{
    <div class="alert alert-danger">@TempData["err"]</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">目前密碼</label>
        <input name="currentPwd" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">新密碼</label>
        <input name="newPwd" type="password" class="form-control" required minlength="8" />
        <div class="form-text">至少 8 碼，建議包含大小寫、數字與符號。</div>
    </div>
    <div class="mb-3">
        <label class="form-label">確認新密碼</label>
        <input name="confirmPwd" type="password" class="form-control" required minlength="8" />
    </div>
    <button class="btn btn-primary">更新密碼</button>
</form>
